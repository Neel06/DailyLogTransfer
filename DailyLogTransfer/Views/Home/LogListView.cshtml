@model List<FileInformation>

<div class="panel">
    <div class="col-xs-12 col-md-12">
        <div id="no-more-tables" class="table-responsive">
            <table class="table table-bordered table-striped table-condensed cf dashboard-grid">
                <thead>
                    <tr>
                        <th class="text-center min-width-20px">File Name</th>
                        <th class="text-center">Transfer To Server</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count != 0)
                    {
                        foreach (var file in Model)
                        {
                            <tr>
                                <td class="text-center text-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
                                        <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z" />
                                        <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z" />
                                    </svg>
                                    @file.FileName
                                </td>
                                <td class="text-center "> 
                                    @*<button class="btn btn-success" onclick="TransferFiles( @file.FileName,@file.FullPath); alert('Button Clicked');    "> Transfer</button>*@
                                    @Html.ActionLink("Transfer", "TransferFiles", new { FileName = file.FileName, FullPath = file.FullPath })
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-danger">
                                @*<p class="h3" ng-show="@( @ViewBag.ErrorMsg )"> @ViewBag.ErrorMsg</p>*@
                                <p class="h3" ng-show="true"> @ViewBag.ErrorMsg</p>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>